{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Registro</h1>


        <div class="form">
            <div class="form__item">
                {{> field action="signupForm.change" label="Email" type="email" name="email" placeholder="Escribe su
                email"}}
                <span name="email" class="form__error">Error</span>
            </div>
        </div>

        <div class="form__item">
            {{> field-password label="Password" type="{{type}}" name="password" placeholder="Enter your password"
            action="signupForm.change" }}
            <span name="password" class="form__error">Error</span>
        </div>

        <div class="form__item">
            {{> field-select label="Role" name="role" placeholder="Elije tu usuario"
            action="signupForm.change" list=data.role }}
            <span name="role" class="form__error">Error</span>
        </div>

        <div class="form__item">
            {{> field-checkbox label="Estoy de acuerdo con la politica de la web" name="isConfirm"
            action="signupForm.change" }}
            <span name="isConfirm" class="form__error">Error</span>
        </div>


        <button onclick="signupForm.submit()" class="button" type="button">Registro</button>

        <span class="alert alert--error">Atencion, es un error!</span>

    </form>


</div>

