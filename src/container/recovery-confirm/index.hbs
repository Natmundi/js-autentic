{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Crear nueva contraseña</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" label="Codigo" type="number" name="codigo"
                placeholder="Codigo" }}
                <span name="codigo" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Contraseña nueva" name="password"
                placeholder="Escribir
                contraseña
                " }}
                <span name="password" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Contraseña nueva" name="passwordAgain"
                placeholder="Escribir contraseña otra vez" }}
                <span name="passwordAgain" class="form__error">Error</span>
            </div>

        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Confirmar
            contraseña</button>

        <span class="alert alert--disabled">Atencion! Error</span>

    </form>
</div>


